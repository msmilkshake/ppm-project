<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.GameWindow">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <columnConstraints>
    <ColumnConstraints hgrow="ALWAYS" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints valignment="CENTER" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="52.0" minHeight="52.0" prefHeight="52.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <GridPane fx:id="containerPane" styleClass="main-pane">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" prefWidth="0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" prefWidth="0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" prefWidth="0.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
        </rowConstraints>
      </GridPane>
      <AnchorPane maxHeight="60.0" minHeight="60.0" prefHeight="60.0" styleClass="main-pane" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER">
         <children>
            <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" spacing="20.0" styleClass="pane-bordered" AnchorPane.bottomAnchor="3.0" AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="1.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Button fx:id="btnUndo" mnemonicParsing="false" onMouseClicked="#btnUndoOnClicked" prefWidth="70.0" styleClass="button" text="Undo">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Button>
                  <Button fx:id="btnSave" mnemonicParsing="false" onMouseClicked="#btnSaveOnClicked" prefWidth="120.0" styleClass="button" text="Save Game" />
                  <Button fx:id="btnBack" mnemonicParsing="false" onMouseClicked="#btnBackOnClicked" prefWidth="130.0" styleClass="button" text="Back to Menu">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Button>
               </children>
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
            </HBox>
         </children>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </AnchorPane>
   </children>
</GridPane>
